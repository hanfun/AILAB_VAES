<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/detail_avatar_id"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:src="@drawable/ic_avatar" />

        <ImageView
            android:id="@+id/idetail_share_id"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/idetail_share_id"
            android:layout_toRightOf="@id/detail_avatar_id"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_name_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mai Anh Ha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_date_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nov 11 2014 near Dis.10" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/detail_text_content_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/detail_text_content_str" />
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/idetail_image_content_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#d1d5d0"
            android:scaleType="centerCrop"
            android:src="@drawable/detail_content_image" />

        <TextView
            android:id="@+id/detail_text_album_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#80d1d5d0"
            android:text="7 picture - Wiew all"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/detail_footer_button_id"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detail_like_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/detail_like_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2" />

            <ImageView
                android:id="@+id/detail_comment_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/detail_comment_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail_see_more_id"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#009e9e"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="@string/detail_see_more" />
    </RelativeLayout>

</LinearLayout>